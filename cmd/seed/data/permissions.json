    {
        "role_name": "Sales Rep",
        "resource": {
            "type": "module",
            "id": "crm.leads"
        },
        "actions": {
            "read": {
                "allowed": true,
                "conditions": {
                    "operator": "OR",
                    "rules": [
                        {
                            "field": "owner",
                            "operator": "eq",
                            "value": "$user.id",
                            "type": "variable"
                        },
                        {
                            "field": "ownerGroup",
                            "operator": "in",
                            "value": "$user.groups",
                            "type": "variable"
                        }
                    ]
                }
            },
            "create": {
                "allowed": true
            },
            "update": {
                "allowed": true,
                "conditions": {
                    "operator": "AND",
                    "rules": [
                        {
                            "field": "owner",
                            "operator": "eq",
                            "value": "$user.id",
                            "type": "variable"
                        },
                        {
                            "field": "status",
                            "operator": "ne",
                            "value": "closed",
                            "type": "static"
                        }
                    ]
                }
            },
            "delete": {
                "allowed": false
            }
        },
        "field_rules": {
            "name": "read_write",
            "email": "read_write",
            "phone": "read_write",
            "company": "read_write",
            "status": "read_write",
            "value": "read_only",
            "internal_notes": "none"
        }
    },
