[Unit]
Description=Go CRM Frontend (Next.js)
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/var/www/go-crm/ui/.next/standalone
ExecStart=/usr/bin/node server.js
Restart=always
Environment=NODE_ENV=production
Environment=PORT=42110
Environment=HOSTNAME=0.0.0.0


[Install]
WantedBy=multi-user.target